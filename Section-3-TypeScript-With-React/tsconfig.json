{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES6",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "baseUrl": "./src",
    "noErrorTruncation": true,
    "importHelpers": true,
    "paths": {
      "core-styles" : ["core/core-styles"]
    }
  },
  "include": ["./src/**/*"],
}